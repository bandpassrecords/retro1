<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Application while the process is starting when the OS's Dark Mode setting is off -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Show a splash screen on the activity. Automatically removed when
             the Flutter engine draws its first frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <!-- Theme applied to the Android Application after the splash screen is shown. -->
    <!-- Flutter needs this to communicate with the native side. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
    <!-- AppCompat theme for UCrop Activity (required by image_cropper) -->
    <!-- Must use NoActionBar because UCropActivity uses Toolbar, not ActionBar -->
    <style name="UCropTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
