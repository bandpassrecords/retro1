# Auto detect text files and perform LF normalization
* text=auto

# Source files
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf

# Gradle files
*.gradle text eol=lf
*.gradle.kts text eol=lf
*.properties text eol=lf

# Android files
*.xml text eol=lf
*.java text eol=lf
*.kt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.mp4 binary
*.mp3 binary
*.wav binary
*.aac binary
*.keystore binary
*.jks binary
*.apk binary
*.aab binary
*.jar binary
*.aar binary

# Generated files (should not be committed but just in case)
*.g.dart text eol=lf
*.freezed.dart text eol=lf
